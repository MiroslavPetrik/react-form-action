{
  "name": "react-form-action",
  "version": "0.4.2",
  "description": "State management helpers for the react form actions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/MiroslavPetrik/react-form-action.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "typecheck": "vitest --typecheck",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "module": "./dist/client.mjs",
      "default": "./dist/client.mjs",
      "types": "./dist/client.d.mts"
    }
  },
  "keywords": [
    "react",
    "form-action",
    "react-form-action",
    "next",
    "next-form-action",
    "nextjs",
    "server-action"
  ],
  "author": "Miroslav Petrik",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.2",
    "react-dom": ">=18.2",
    "zod": "^3",
    "zod-form-data": "^2"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "next": "^14.0.2",
    "prettier": "^3.3.3",
    "react-render-prop-type": "^0.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^1.2.2",
    "zod": "^3.22.4",
    "zod-form-data": "^2.0.2"
  }
}
