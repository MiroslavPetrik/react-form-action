{
  "name": "react-form-action",
  "version": "1.4.0",
  "description": "State management helpers for the react form actions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/MiroslavPetrik/react-form-action.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "typecheck": "vitest --typecheck",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "ncu": "ncu --interactive --format group"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "module": "./dist/client.mjs",
      "default": "./dist/client.mjs",
      "types": "./dist/client.d.mts"
    }
  },
  "keywords": [
    "react",
    "form-action",
    "react-form-action",
    "next",
    "next-form-action",
    "nextjs",
    "server-action"
  ],
  "author": "Miroslav Petrik",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19",
    "zod": "^3",
    "zod-form-data": "^2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "happy-dom": "^15.11.7",
    "npm-check-updates": "^17.1.11",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-render-prop-type": "^0.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^1.3.1",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  }
}
